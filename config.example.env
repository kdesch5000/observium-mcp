# Observium MCP Server Configuration
# Copy this file to .env and fill in your values

# Database connection
OBSERVIUM_DB_HOST=localhost
OBSERVIUM_DB_NAME=observium
OBSERVIUM_DB_USER=observium
OBSERVIUM_DB_PASS=your_database_password

# RRD data path (where Observium stores RRD files)
OBSERVIUM_RRD_PATH=/opt/observium/rrd

# Optional: Database port (default: 3306)
# OBSERVIUM_DB_PORT=3306
